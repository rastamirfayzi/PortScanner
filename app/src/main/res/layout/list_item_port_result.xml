<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="@dimen/padding_7"
        android:paddingBottom="@dimen/padding_7"
        android:background="@drawable/list_item_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_port_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/padding_5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Port_Name"
            android:textColor="@color/color_port_text"
            android:textSize="@dimen/text_size13" />
        <TextView
            android:id="@+id/tv_port_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Port_No"
            android:padding="@dimen/padding_5"
            android:textColor="@color/color_port_text"
            android:textSize="@dimen/text_size13" />
        <TextView
            android:id="@+id/tv_port_status"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:text="@string/Status"
            android:textColor="@color/color_port_text"
            android:textSize="@dimen/text_size13" />
    </LinearLayout>
        <View
            android:background="@color/color_range_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"></View>

</LinearLayout>